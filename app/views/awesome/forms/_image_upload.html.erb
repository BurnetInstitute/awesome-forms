<div class="control-group<%= errors.blank? ? '' : ' error' %>"<%= popover.blank? ? '' :  popover %>>
	<p class="controls">
		<%= image %>
	</p>
	<%= label %>
	<div class="controls">
		<%= field %>
		<%= hidden_field %>
		<% if errors %>
			<span class="help-inline">
				<%= errors %>
			</span>
		<% end %>
		<% if help %>
			<span class="help-block">
				<%= help %>
			</span>
		<% end %>
	</div>
</div>
