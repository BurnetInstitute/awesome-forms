<div class="control-group<%= errors.blank? ? '' : ' error' %>"<%= popover.blank? ? '' :  popover %>>
	<%= label %>
	<div class="controls">
		<%= field %>
		<% if help && errors.blank? %>
		<span class="help-inline">
			<%= help %>
		</span>
		<% end %>
		<% unless errors.blank? %>
		<span class="help-inline">
			<%= errors %>
		</span>
		<% end %>
	</div>
</div>